@import "bootstrap";

$grayLight: #999;
$grayLighter: #ccc;

@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

/* universal */

html {
  // overflow-y: scroll;
}

body {
  padding-top: 40px;
  //background-image: url(<%= asset_path 'home-page.jpg' %>);
  background-size: 100%;
  background-repeat: no-repeat;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  text-align: center;
}

h2 {
  font-size: 1.2em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  color: $grayLight;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

/* header */

#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: #fff;
  text-transform: uppercase;
  letter-spacing: -1px;
  padding-top: 9px;
  font-weight: bold;
  line-height: 1;
  &:hover {
    color: orange;
    text-decoration: none;
  }
}

.center {
  text-align: center;
  h1 {
    margin-bottom: 10px;
  }
  img {
    width: 50px;
  }
}

header {
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 10px;
    }
  }
}

.nav {
  a {
    color: #fff !important;
    &:hover {
     color: $grayLight !important;
     background: none !important;
    }
  }
}

/* footer */

footer {
  a {
    color: #555;
    &:hover {
      color: #222;
    }
  }
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 10px;
    }
  }
}

.footer {
  position: absolute;
  padding-top: 10px;
  bottom: 0;
  width: 100%;
  height: 40px;
  background-color: #f5f5f5;
}

/* miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}

/* sidebar */

aside {
  section {
    padding: 10px 10px  ;
    border-top: 1px solid $grayLighter;
    &:first-child {
      border: 0;
      padding-top: 0;
    }
    span {
      display: block;
      margin-bottom: 3px;
      line-height: 1;
    }
    h1 {
      font-size: 1.4em;
      text-align: left;
      letter-spacing: -1px;
      margin-bottom: 3px;
      margin-top: 20px;
    }
  }
}

.gravatar {
  float: left;
  margin-right: 10px;
}

/* forms */

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px !important;
  @include box_sizing;
}

input {
  margin-top: 5px !important;
  height: 30px !important;
}

.form-field {
  margin: 0 auto;
  width: 400px;
  line-height: 0.5em;
}

.btn {
  margin-top: 5px !important;
}

// errors messages

#error_explanation {
  color: #f00;
  ul {
    margin-top: 10px;
    list-style: none;
  }

  li {
    padding: 5px;
    line-height: 0.5em;
  }
}

